import pandas as pd
import plotly.express as px

df_world = pd.read_csv('https://raw.githubusercontent.com/Acsa01/World-Cup-2022---Fran-a-e-Argentina/main/Fifa_2022.csv')

# Filtrando os dados

dados_filtrados = (df_world['team1'] == 'ARGENTINA') | (df_world['team2'] == 'ARGENTINA')
print("Jogos da Argentina: ")
print(df_world[dados_filtrados])

dados_filtradosF = (df_world['team1'] == 'FRANCE') | (df_world['team2'] == 'FRANCE')
print("Jogas da Franca: " )
print(df_world[dados_filtradosF])








